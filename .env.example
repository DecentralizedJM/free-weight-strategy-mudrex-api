# ================================
# REQUIRED ENVIRONMENT VARIABLES
# ================================

# Mudrex API (Required for live trading)
MUDREX_API_SECRET=your_api_secret_here

# Mode (set to false for live trading)
DRY_RUN=true

# ================================
# TRADING CONFIGURATION
# ================================

# Symbols to trade (comma-separated)
SYMBOLS=BTCUSDT,ETHUSDT

# Timeframe in minutes
TIMEFRAME=5

# ================================
# RISK MANAGEMENT
# ================================

# Margin percentage - % of balance to use as margin per trade
MARGIN_PERCENT=5

# Leverage settings
MIN_LEVERAGE=1
MAX_LEVERAGE=20
DEFAULT_LEVERAGE=5

# Minimum order value in USD (leverage will auto-scale to meet this)
MIN_ORDER_VALUE=8

# Stop-loss ATR multiplier
STOPLOSS_ATR_MULTIPLIER=1.5

# Take-profit risk:reward ratio
TAKEPROFIT_RATIO=2.0

# ================================
# STRATEGY SETTINGS
# ================================

# Minimum confluence score (0-100)
MIN_CONFLUENCE_SCORE=60

# Minimum indicators aligned (1-5)
MIN_INDICATORS_ALIGNED=3

# Cooldown between trades (seconds)
TRADE_COOLDOWN=300

# Max positions per symbol
MAX_POSITIONS_PER_SYMBOL=1

# ================================
# LOGGING
# ================================

LOG_LEVEL=INFO
# LOG_FILE=logs/trading.log

# ================================
# TELEGRAM ALERTS
# ================================

# Your Telegram bot token (from @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Your Telegram chat ID (user or group)
TELEGRAM_CHAT_ID=your_chat_id_here

# Enable/disable Telegram alerts (auto-enabled if both above are set)
TELEGRAM_ENABLED=true
